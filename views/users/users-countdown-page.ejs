<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <% if(typeof csrfToken != undefined) {%> 
        <meta name="token_id" content="<%= csrfToken %>">  
    <% } %> 
    <% if(typeof page != undefined) {%> 
        <meta name="page" content="<%= page %>">  
    <% } %>
    <% if(typeof admin_id != undefined) {%> 
        <meta name="admin_document" content="<%= admin_id %>"> 
        <meta name="user_document" content="<%= user_document %>"> 
        <meta name="username" content="<%= username %>"> 
    <% } %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <style>
        /*Globals*/
        @import url("https://fonts.googleapis.com/css?family=Russo+One");
        /* Links */
        a,a:focus,a:hover {
            color: #fff;
        }
        /* Custom default button */
        .btn-secondary,.btn-secondary:hover,.btn-secondary:focus {
            color: #333;
            text-shadow: none; /* Prevent inheritance from `body` */
            background-color: #fff;
            border: .05rem solid #fff;
        }
        /*Base structure*/
        html,body {
            height: 100%;
            background-color: #333;
        }
        body {
            display: -ms-flexbox;
            display: flex;
            color: #fff;
            background: #092756;
            background: -moz-radial-gradient(0% 100%, ellipse cover, rgba(104,128,138,.4) 10%,rgba(138,114,76,0) 40%),-moz-linear-gradient(top,  rgba(57,173,219,.25) 0%, rgba(42,60,87,.4) 100%), -moz-linear-gradient(-45deg,  #670d10 0%, #092756 100%);
            background: -webkit-radial-gradient(0% 100%, ellipse cover, rgba(104,128,138,.4) 10%,rgba(138,114,76,0) 40%), -webkit-linear-gradient(top,  rgba(57,173,219,.25) 0%,rgba(42,60,87,.4) 100%), -webkit-linear-gradient(-45deg,  #670d10 0%,#092756 100%);
            background: -o-radial-gradient(0% 100%, ellipse cover, rgba(104,128,138,.4) 10%,rgba(138,114,76,0) 40%), -o-linear-gradient(top,  rgba(57,173,219,.25) 0%,rgba(42,60,87,.4) 100%), -o-linear-gradient(-45deg,  #670d10 0%,#092756 100%);
            background: -ms-radial-gradient(0% 100%, ellipse cover, rgba(104,128,138,.4) 10%,rgba(138,114,76,0) 40%), -ms-linear-gradient(top,  rgba(57,173,219,.25) 0%,rgba(42,60,87,.4) 100%), -ms-linear-gradient(-45deg,  #670d10 0%,#092756 100%);
            background: -webkit-radial-gradient(0% 100%, ellipse cover, rgba(104,128,138,.4) 10%,rgba(138,114,76,0) 40%), linear-gradient(to bottom,  rgba(57,173,219,.25) 0%,rgba(42,60,87,.4) 100%), linear-gradient(135deg,  #670d10 0%,#092756 100%);
            filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#3E1D6D', endColorstr='#092756',GradientType=1 );
            text-shadow: 0 .05rem .1rem rgba(0, 0, 0, .5);
            box-shadow: inset 0 0 5rem rgba(0, 0, 0, .5);
        }
        .cover-container {
            max-width: 100vw;
            min-width: 100vw;
        }
        /*Header*/
        .masthead {
            margin-bottom: 2rem;
        }
        .masthead-brand {
            margin-bottom: 0;
        }
        /*Cover*/
        .cover {
            margin-top: 2rem;
            padding: 0 1.5rem;
        }
        /*Footer*/
        .mastfoot {
            color: rgba(255, 255, 255, .5);
        }

        .russo-text{
            font-family: "Russo One", arial, sans-serif;
            text-transform: uppercase;
            letter-spacing: 0.06em;
        }
        @font-face {
            font-family: 'DS-DIGIB';
            src: url('/fonts/DS-DIGIB.TTF');
        }
        .digital-clock{
            font-family: 'DS-DIGIB';
        }
        .animation-gif{
            align-content: center;
        }
        @media (min-width:768px) {
            #header{
                font-size : 2.1vw !important;
            }
            .digital-clock{
                font-size: 2vw !important;
            }
            .text{
                font-size: 1.5vw !important;
            }
            #daily-message{
                font-size: 1.5vw !important;
            }
            .animation-gif{
                max-width: 10em;
                max-height: 10em;
            }
        }
    </style>
  </head>
  <body class="text-center russo-text">
    <div class="cover-container d-flex align-items-center align-content-center justify-content-center w-100 h-100 mx-auto flex-column">
        <header class="masthead mb-auto"></header>
        <main role="main" class="inner cover text-center">
            <div class="row">
                <div class="col-12">
                    <h1 class="h6 pb-3 russo-text" id="header"></h1>
                </div>
            </div>
            <div class="row" style="margin-right: .5em;">
                <div class="col-12">
                    <div class="row">
                        <div class="col-3 px-2">
                            <div class="row">
                                <div class="col-12"><span id="days" class="h4 digital-clock"></span></div>
                            </div>
                            <div class="row">
                                <div class="col-12 text d-none"><span>DAYS</span></div>
                            </div>
                        </div>
                        <div class="col-3 px-2">
                            <div class="row">
                                <div class="col-12 "><span id="hours" class="h4 digital-clock"></span></div>
                            </div>
                            <div class="row">
                                <div class="col-12 text d-none"><span>HOUR</span></div>
                            </div>
                        </div>
                        <div class="col-3 px-2">
                            <div class="row">
                                <div class="col-12"><span id="minutes" class="h4 digital-clock"></span></div>
                            </div>
                            <div class="row">
                                <div class="col-12 text d-none"><span>MINUTE</span></div>
                            </div>
                        </div>
                        <div class="col-3 px-2">
                            <div class="row">
                                <div class="col-12"><span id="seconds" class="h4 digital-clock"></span></div>
                            </div>
                            <div class="row">
                                <div class="col-12 text d-none"><span>SECONDS</span></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row russo-text">
                <div class="col-12">
                    <h2 id="daily-message" class="pt-3 h6"></h2>
                </div>
            </div>
            <div class="img" style="min-height: 10em;">
                <img src="../images/gif/doraemon-running.gif" alt="doraemon-animation" class="animation-gif pt-3 d-none" width="30%" height="30%">
            </div>
      </main>
      <footer class="mastfoot mt-auto">
        <div class="inner">
            <p class="text-muted">&copy; 2021 | <a href="http://instagram.com/rs_prog" target="_blank">RS-PROG.COM</a></p>
        </div>
      </footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="/javascripts/user-controller.js" type="module"></script>
    <script src="/javascripts/general-controller.js" type="module"></script>
  </body>
</html>
